<?xml version="1.0" encoding="utf-8"?>
<!--注册页面的布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aa0000"
        android:gravity="center_horizontal"
        android:id="@+id/enroll_title"
        >
        <ImageView
            android:id="@+id/img_enroll_fragment_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_title_home_default"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"

            />
        <ImageView
            android:id="@+id/img_enroll_fragment_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_title_share_default"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edt_id_enr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入邮箱地址"
        android:textColorHint="#c6bcbc"
        android:textSize="20dp"


        android:layout_below="@id/enroll_title"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/edt_user_enr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入用户昵称"
        android:textSize="20dp"
        android:textColorHint="#c6bcbc"
        android:layout_below="@id/edt_id_enr"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/edt_psw_enr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="密码：6到16位字符"
        android:textColorHint="#c6bcbc"
        android:textSize="20dp"

        android:password="true"
        android:layout_below="@id/edt_user_enr"
        android:layout_marginTop="10dp"
        />
   <Button
       android:id="@+id/btn_fragment_enroll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:background="#aa0000"
       android:text="立即注册"
       android:textSize="20dp"
       android:textColor="#ffffff"

       android:layout_below="@+id/edt_psw_enr"
       android:layout_marginTop="10dp"
       />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_fragment_enroll"
        android:layout_marginTop="10dp">
        <CheckBox
            android:id="@+id/check_fragment_enroll"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我同意“服务条款”和“网络用户隐私保护和个人信息利用政策”"

        android:layout_toRightOf="@+id/check_fragment_enroll"
            android:textSize="18dp"
            android:textColor="#000000"
            />
    </RelativeLayout>
</RelativeLayout>