<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aa0000"
        android:gravity="center_horizontal"
        android:id="@+id/resgist_title"

        >
        <ImageView
            android:id="@+id/left_slide_regiest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_title_home_default"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"

            />
        <ImageView
            android:id="@+id/rigth_slide_regeist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_title_share_default"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_user_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入用户昵称"
        android:textSize="20dp"
        android:layout_below="@id/resgist_title"
        android:layout_marginTop="20dp"
        android:textColorHint="#c6bcbc"
        />

    <EditText
        android:id="@+id/edt_psw_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="密码：6到16位字符"
        android:textSize="20dp"
        android:textColorHint="#c6bcbc"
        android:password="true"
        android:layout_below="@id/edt_user_reg"
        android:layout_marginTop="10dp"
       />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:gravity="center_horizontal"
         android:layout_below="@+id/edt_psw_reg"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         >
      <Button
          android:id="@+id/btn_fragment_regist_enroll"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="注册"
          android:background="#aa0000"
          android:textColor="#ffffff"
          android:textSize="20dp"
          android:layout_weight="1"/>

         <Button
             android:id="@+id/btn_fragment_regist_found_pwd"

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="找回密码"
             android:background="#aa0000"
             android:layout_marginLeft="5dp"
             android:textColor="#ffffff"
             android:textSize="20dp"
             android:layout_weight="1"/>
         <Button
             android:id="@+id/btn_fragment_regist_logo"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="登录"
             android:background="#aa0000"
             android:layout_marginLeft="5dp"
             android:textColor="#ffffff"
             android:textSize="20dp"
             android:layout_weight="1"/>
     </LinearLayout>
</RelativeLayout>
