<?xml version="1.0" encoding="utf-8"?>
<!--右侧滑动页面布局-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left">

    <ImageView
    android:id="@+id/img_regist_right_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
    android:paddingTop="80dp"/>
    <TextView
        android:id="@+id/text_regist_right_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="立刻登录"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:layout_below="@id/img_regist_right_fragment"
        />
    <LinearLayout
        android:id="@+id/layout_share"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@mipmap/share_little_bg"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_version_update"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/img_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fun_share_weixin"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/img_weibo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/addimport_qq"
            android:layout_toRightOf="@+id/img_weixin"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/img_friend_cricle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fun_share_friends"
            android:layout_toRightOf="@+id/img_weibo"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/img_xinlang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fun_share_weibo"
            android:layout_toRightOf="@+id/img_friend_cricle"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/text_version_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新版本"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_regist_right_fragment"
         android:layout_marginTop="200dp"

        />
</RelativeLayout>
