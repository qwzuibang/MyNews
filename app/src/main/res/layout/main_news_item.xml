<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/img_main_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/txt_main_news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梅西实至名归，当选今年的足球先生，荣获金球奖"
            android:textSize="25dp"
            android:ellipsize="none"
            android:singleLine="true"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/txt_main_news_item_summer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="煤老板今年状态火热，单赛季打入132球，打破了由罗拉尔多所保持的130球"
            android:textSize="20dp"
            android:singleLine="true"
            android:layout_below="@id/txt_main_news_item_title"
            />
        <TextView
            android:id="@+id/txt_main_news_item_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.12.22.14:25:0"
            android:textSize="15dp"
            android:layout_below="@id/txt_main_news_item_summer"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</LinearLayout>
