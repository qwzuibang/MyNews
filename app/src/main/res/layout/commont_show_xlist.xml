<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ImageView
        android:id="@+id/img_comment_show_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/send"
        android:layout_marginLeft="10dp"
        />
<TextView
    android:id="@+id/text_comment_show_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="666"
    android:layout_toRightOf="@+id/img_comment_show_photo"
    android:textSize="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:textColor="#4083e0"/>
    <TextView
        android:id="@+id/text_comment_show_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-01-04 17:10:02"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/text_comment_show_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活不止眼前的苟且，还有诗和远方的田野"
        android:textSize="20dp"
        android:layout_below="@+id/img_comment_show_photo"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
</RelativeLayout>
